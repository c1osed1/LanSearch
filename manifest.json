{
  "manifest_version": 3,
  "name": "Lan-Search",
  "version": "1.3.12",
  "description": "Добавляет поиск по глобальному меню @qsoulmain",
  "author": "GlobalSearch Team",
  "homepage_url": "https://github.com/c1osed1/LanSearch",
  "permissions": ["scripting", "activeTab", "storage", "notifications", "tabs"],
  "host_permissions": ["<all_urls>", "https://api.github.com/*"],
  "action": {
    "default_title": "Добавить поиск по меню",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.langame.com/*",
        "*://*.langame.ru/*",
        "*://*.langame.net/*",
        "*://*.langame.org/*",
        "*://*.cls.com/*",
        "*://*.cls.ru/*",
        "*://*.cls.net/*",
        "*://*.cls.org/*",
        "*://*.langamesoft.ru/*",
        "*://*.langamesoftware.ru/*",
        "*://*.langamecloud.ru/*",
        "*://*.langamesftw.ru/*",
        "*://*.langame-pr.ru/*"
      ],
      "js": ["recent-tabs.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "theme.css"],
      "matches": [
        "*://*.langame.com/*",
        "*://*.langame.ru/*",
        "*://*.langame.net/*",
        "*://*.langame.org/*",
        "*://*.cls.com/*",
        "*://*.cls.ru/*",
        "*://*.cls.net/*",
        "*://*.cls.org/*",
        "*://*.langamesoft.ru/*",
        "*://*.langamesoftware.ru/*",
        "*://*.langamecloud.ru/*",
        "*://*.langamesftw.ru/*",
        "*://*.langame-pr.ru/*"
      ]
    }
  ]
} 