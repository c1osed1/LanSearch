{
  "manifest_version": 3,
  "name": "Lan-Search",
  "version": "1.2.0",
  "description": "Добавляет поиск по глобальному меню @qsoulmain",
  "author": "GlobalSearch Team",
  "homepage_url": "https://github.com/globalsearch/global-menu-search",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Добавить поиск по меню",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["recent-tabs.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 